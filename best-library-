<input id="search" placeholder="–ü–æ–∏—Å–∫ –∫–Ω–∏–≥–∏ –∏–ª–∏ –∞–≤—Ç–æ—Ä–∞...">

<div id="results"></div>

<div id="reader"></div>

<script>
// –ë–ê–ó–ê –ö–ù–ò–ì
const books = [
 {
  title:"–î–Ω–µ–≤–Ω–∏–∫ –ø–∞–º—è—Ç–∏",
  author:"–ù–∏–∫–æ–ª–∞—Å –°–ø–∞—Ä–∫—Å",
  file:"books/dnevnik-pamyati.pdf",
  description:"–†–æ–º–∞–Ω –æ –ª—é–±–≤–∏"
 },
 {
  title:"Alice in Wonderland",
  author:"Lewis Carroll",
  file:"books/alice.pdf",
  description:"Fantasy classic"
 },
 {
  title:"Frankenstein",
  author:"Mary Shelley",
  file:"books/frankenstein.pdf",
  description:"Classic novel"
 }
];

// –ü–û–ö–ê–ó –í–°–ï–• –ö–ù–ò–ì
showBooks(books);

// –ü–û–ò–°–ö
document.getElementById("search").oninput = function(){
 const q = this.value.toLowerCase();
 const filtered = books.filter(b =>
   b.title.toLowerCase().includes(q) ||
   b.author.toLowerCase().includes(q)
 );
 showBooks(filtered);
}

// –í–´–í–û–î
function showBooks(list){
 document.getElementById("results").innerHTML =
 list.map(b=>`
   <div class="book" onclick="openBook('${b.file}','${b.title}','${b.author}')">
    <b>${b.title}</b><br>
    <small>${b.author}</small>
   </div>
 `).join("") || "<p>–ù–∏—á–µ–≥–æ –Ω–µ –Ω–∞–π–¥–µ–Ω–æ</p>";
}

// –ß–¢–ï–ù–ò–ï
function openBook(file,title,author){
 document.title = title+" ‚Äî "+author+" —á–∏—Ç–∞—Ç—å –æ–Ω–ª–∞–π–Ω";
 document.querySelector("meta[name='description']").content =
 "–ß–∏—Ç–∞—Ç—å –∫–Ω–∏–≥—É "+title+" –∞–≤—Ç–æ—Ä–∞ "+author+" –æ–Ω–ª–∞–π–Ω –±–µ—Å–ø–ª–∞—Ç–Ω–æ";

 document.getElementById("reader").style.display="block";
 document.getElementById("reader").innerHTML=
 `<iframe src="${file}"></iframe>`;
 window.scrollTo(0,document.body.scrollHeight);
}
</script>

